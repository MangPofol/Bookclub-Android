<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.auth.signin.PhotoNicknameFragment">

    <ImageView
        android:id="@+id/photo_nickname_welcome_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_ourpage_banner"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_nickname_select_profile_img_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="@string/msg_select_profile_image"
        android:textAppearance="@style/ta_eb_18_kr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/photo_nickname_select_profile_iv"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/bg_default_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_nickname_select_profile_img_tv" />

    <ImageView
        android:id="@+id/photo_nickname_select_plus_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_plus_circle"
        app:layout_constraintBottom_toBottomOf="@+id/photo_nickname_select_profile_iv"
        app:layout_constraintEnd_toEndOf="@+id/photo_nickname_select_profile_iv" />

    <TextView
        android:id="@+id/photo_nickname_your_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="@string/msg_your_name"
        android:textAppearance="@style/ta_b_18_kr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_nickname_select_profile_iv" />

    <EditText
        android:id="@+id/photo_nickname_nickname_et"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_grey_10_null_null"
        android:hint="@string/msg_input_content"
        android:inputType="text"
        android:maxLength="10"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:textAppearance="@style/ta_r_14_kr"
        android:textColorHint="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_nickname_your_nickname_tv" />

    <TextView
        android:id="@+id/photo_nickname_nickname_condition_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:text="@string/msg_nickname_condition"
        android:textAppearance="@style/ta_r_10_kr"
        android:textColor="@color/secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_nickname_nickname_et" />

</androidx.constraintlayout.widget.ConstraintLayout>