<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".view.auth.signin.ReadingStyleFragment">

    <TextView
        android:id="@+id/reading_style_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/msg_reading_style"
        android:textAppearance="@style/ta_b_18_kr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/reading_style_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/reading_style_tv">

        <RadioButton
            android:id="@+id/style_rb1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_reading_style_rb"
            android:button="@null"
            android:paddingHorizontal="10dp"
            android:text="@string/title_planner"
            android:textAppearance="@style/ta_r_14_kr"
            android:textColor="@drawable/selector_reading_style_rb_text" />

        <RadioButton
            android:id="@+id/style_rb2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/selector_reading_style_rb"
            android:button="@null"
            android:paddingHorizontal="10dp"
            android:text="@string/title_time_to_time"
            android:textAppearance="@style/ta_r_14_kr"
            android:textColor="@drawable/selector_reading_style_rb_text" />

        <RadioButton
            android:id="@+id/style_rb3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/selector_reading_style_rb"
            android:button="@null"
            android:paddingHorizontal="10dp"
            android:text="@string/title_writer"
            android:textAppearance="@style/ta_r_14_kr"
            android:textColor="@drawable/selector_reading_style_rb_text" />

        <RadioButton
            android:id="@+id/style_rb4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/selector_reading_style_rb"
            android:button="@null"
            android:paddingHorizontal="10dp" />

    </RadioGroup>

    <EditText
        android:id="@+id/style_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@color/transparent"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="@string/title_introduce_by_my_style"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:textAppearance="@style/ta_r_14_kr"
        android:textColor="@color/white"
        android:textColorHint="@color/grey_dark"
        app:layout_constraintBottom_toBottomOf="@+id/reading_style_rg" />

</androidx.constraintlayout.widget.ConstraintLayout>