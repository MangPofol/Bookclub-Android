<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".view.auth.signin.ExpressMeFragment">

    <TextView
        android:id="@+id/express_me_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/msg_express_yourself"
        android:textAppearance="@style/ta_b_18_kr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/express_me_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_grey_10_null_null"
        android:hint="@string/msg_express_me_hint"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:textAppearance="@style/ta_b_14_kr"
        android:textColorHint="@color/grey_dark"
        android:textColor="@color/primary"
        app:layout_constraintTop_toBottomOf="@+id/express_me_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>