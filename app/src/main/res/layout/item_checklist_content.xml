<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/checklist_content_view"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_white_15_null_null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/checklist_content_icon_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="7.5dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/ic_plus_secondary"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_content_view"
        app:layout_constraintStart_toStartOf="@+id/checklist_content_view"
        app:layout_constraintTop_toTopOf="@+id/checklist_content_view" />

    <TextView
        android:id="@+id/checklist_content_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="7.5dp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:textAppearance="@style/ta_r_12_kr"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_content_view"
        app:layout_constraintEnd_toEndOf="@+id/checklist_content_view"
        app:layout_constraintStart_toEndOf="@+id/checklist_content_icon_iv"
        app:layout_constraintTop_toTopOf="@+id/checklist_content_view" />

    <TextView
        android:id="@+id/checklist_content_empty_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="7.5dp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:text="@string/msg_write_push"
        android:textAppearance="@style/ta_r_12_kr"
        android:textColor="@color/secondary"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_content_view"
        app:layout_constraintEnd_toStartOf="@+id/checklist_content_delete_iv"
        app:layout_constraintStart_toEndOf="@+id/checklist_content_icon_iv"
        app:layout_constraintTop_toTopOf="@+id/checklist_content_view" />

    <ImageView
        android:id="@+id/checklist_content_delete_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="11dp"
        android:padding="7.5dp"
        android:src="@drawable/ic_close_secondary"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_content_view"
        app:layout_constraintEnd_toEndOf="@+id/checklist_content_view"
        app:layout_constraintStart_toEndOf="@+id/checklist_content_empty_tv"
        app:layout_constraintTop_toTopOf="@+id/checklist_content_view" />

</androidx.constraintlayout.widget.ConstraintLayout>