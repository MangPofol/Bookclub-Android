<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="11dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/checklist_body_tv"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="35dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_15_null_null"
        android:textColor="@color/primary_light"
        android:textAppearance="@style/ta_r_12_kr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/checklist_body_checked_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/ic_checked"
        app:layout_constraintTop_toTopOf="@+id/checklist_body_tv"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_body_tv"
        app:layout_constraintStart_toStartOf="@+id/checklist_body_tv" />

    <ImageView
        android:id="@+id/checklist_body_delete_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="7.5dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/ic_close_secondary"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_body_tv"
        app:layout_constraintEnd_toEndOf="@id/checklist_body_tv"
        app:layout_constraintTop_toTopOf="@+id/checklist_body_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>