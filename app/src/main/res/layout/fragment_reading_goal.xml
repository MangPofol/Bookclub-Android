<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".view.auth.signin.ReadingGoalFragment">

    <TextView
        android:id="@+id/reading_goal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:lineSpacingExtra="4dp"
        android:text="@string/msg_reading_goal"
        android:textAppearance="@style/ta_b_18_kr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_grey_10_null_null"
        app:layout_constraintBottom_toBottomOf="@+id/reading_goal_period_number_np"
        app:layout_constraintEnd_toEndOf="@+id/reading_goal_period_number_np"
        app:layout_constraintStart_toStartOf="@+id/reading_goal_period_number_np"
        app:layout_constraintTop_toTopOf="@+id/reading_goal_period_number_np" />

    <NumberPicker
        android:id="@+id/reading_goal_period_number_np"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintEnd_toStartOf="@+id/reading_goal_period_unit_np"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reading_goal_tv" />

    <View
        android:layout_width="37dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_grey_10_null_null"
        app:layout_constraintBottom_toBottomOf="@+id/reading_goal_period_unit_np"
        app:layout_constraintEnd_toEndOf="@+id/reading_goal_period_unit_np"
        app:layout_constraintStart_toStartOf="@+id/reading_goal_period_unit_np"
        app:layout_constraintTop_toTopOf="@+id/reading_goal_period_unit_np" />

    <NumberPicker
        android:id="@+id/reading_goal_period_unit_np"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintEnd_toStartOf="@+id/reading_goal_period_tv"
        app:layout_constraintStart_toEndOf="@+id/reading_goal_period_number_np"
        app:layout_constraintTop_toBottomOf="@+id/reading_goal_tv" />

    <TextView
        android:id="@+id/reading_goal_period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_during"
        android:textAppearance="@style/ta_b_14_kr"
        app:layout_constraintBottom_toBottomOf="@+id/reading_goal_period_unit_np"
        app:layout_constraintEnd_toStartOf="@+id/reading_goal_book_cnt_np"
        app:layout_constraintStart_toEndOf="@+id/reading_goal_period_unit_np"
        app:layout_constraintTop_toTopOf="@+id/reading_goal_period_unit_np" />

    <View
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_grey_10_null_null"
        app:layout_constraintBottom_toBottomOf="@+id/reading_goal_book_cnt_np"
        app:layout_constraintEnd_toEndOf="@+id/reading_goal_book_cnt_np"
        app:layout_constraintStart_toStartOf="@+id/reading_goal_book_cnt_np"
        app:layout_constraintTop_toTopOf="@+id/reading_goal_book_cnt_np" />

    <NumberPicker
        android:id="@+id/reading_goal_book_cnt_np"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintEnd_toStartOf="@+id/reading_goal_book_cnt_tv"
        app:layout_constraintStart_toEndOf="@+id/reading_goal_period_tv"
        app:layout_constraintTop_toBottomOf="@+id/reading_goal_tv" />

    <TextView
        android:id="@+id/reading_goal_book_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_record_book"
        android:textAppearance="@style/ta_b_14_kr"
        app:layout_constraintBottom_toBottomOf="@+id/reading_goal_book_cnt_np"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reading_goal_book_cnt_np"
        app:layout_constraintTop_toTopOf="@+id/reading_goal_book_cnt_np" />

</androidx.constraintlayout.widget.ConstraintLayout>