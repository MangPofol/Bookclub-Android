<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layout_gradation"
    tools:context=".view.main.record.RecordSettingFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/record_setting_tb"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/title_record_setting"
        app:titleCentered="true"
        app:titleTextAppearance="@style/ta_eb_18_kr"
        app:titleTextColor="@color/primary" />

    <TextView
        android:id="@+id/record_setting_complete_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="21dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:text="@string/action_complete"
        android:textAppearance="@style/ta_b_14_kr"
        android:textColor="@drawable/selector_sign_in_tv_text"
        app:layout_constraintBottom_toBottomOf="@+id/record_setting_tb"
        app:layout_constraintEnd_toEndOf="@+id/record_setting_tb"
        app:layout_constraintTop_toTopOf="@+id/record_setting_tb" />

    <View
        android:id="@+id/record_setting_location_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bg_grey80_10_null_null"
        app:layout_constraintTop_toBottomOf="@+id/record_setting_tb" />

    <TextView
        android:id="@+id/record_setting_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/msg_where_read"
        android:textAppearance="@style/ta_b_14_kr"
        app:layout_constraintBottom_toTopOf="@+id/record_setting_location_et"
        app:layout_constraintStart_toStartOf="@+id/record_setting_location_view"
        app:layout_constraintTop_toTopOf="@+id/record_setting_location_view"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/record_setting_location_et"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_white_15_null_null"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="8dp"
        android:hint="@string/msg_where_read"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="11dp"
        android:textAppearance="@style/ta_r_12_kr"
        android:textColor="@color/primary"
        android:textColorHint="@color/grey_dark"
        app:layout_constraintBottom_toBottomOf="@+id/record_setting_location_view"
        app:layout_constraintEnd_toEndOf="@+id/record_setting_location_view"
        app:layout_constraintStart_toStartOf="@+id/record_setting_location_view"
        app:layout_constraintTop_toBottomOf="@+id/record_setting_location_tv" />

    <View
        android:id="@+id/record_setting_time_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/bg_grey80_10_null_null"
        app:layout_constraintTop_toBottomOf="@+id/record_setting_location_view" />

    <TextView
        android:id="@+id/record_setting_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/msg_what_time_read"
        android:textAppearance="@style/ta_b_14_kr"
        app:layout_constraintBottom_toTopOf="@+id/record_setting_time_et"
        app:layout_constraintStart_toStartOf="@+id/record_setting_time_view"
        app:layout_constraintTop_toTopOf="@+id/record_setting_time_view"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/record_setting_time_et"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_white_15_null_null"
        android:drawableLeft="@drawable/ic_clock"
        android:drawablePadding="8dp"
        android:hint="@string/msg_what_time_read_hint"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="11dp"
        android:textAppearance="@style/ta_r_12_kr"
        android:textColor="@color/primary"
        android:textColorHint="@color/grey_dark"
        app:layout_constraintBottom_toBottomOf="@+id/record_setting_time_view"
        app:layout_constraintEnd_toEndOf="@+id/record_setting_time_view"
        app:layout_constraintStart_toStartOf="@+id/record_setting_time_view"
        app:layout_constraintTop_toBottomOf="@+id/record_setting_time_tv" />

    <View
        android:id="@+id/record_setting_link_view"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/bg_grey80_10_null_null"
        app:layout_constraintTop_toBottomOf="@+id/record_setting_time_view" />

    <TextView
        android:id="@+id/record_setting_link_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/msg_add_link"
        android:textAppearance="@style/ta_b_14_kr"
        app:layout_constraintBottom_toTopOf="@+id/record_setting_link_et_view"
        app:layout_constraintStart_toStartOf="@+id/record_setting_link_view"
        app:layout_constraintTop_toTopOf="@+id/record_setting_link_view"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/record_setting_link_et_view"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_white_15_null_null"
        app:layout_constraintBottom_toBottomOf="@+id/record_setting_link_view"
        app:layout_constraintEnd_toEndOf="@+id/record_setting_link_view"
        app:layout_constraintStart_toStartOf="@+id/record_setting_link_view"
        app:layout_constraintTop_toBottomOf="@+id/record_setting_link_tv" />

    <ImageView
        android:id="@+id/record_setting_link_iv"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_link"
        app:layout_constraintBottom_toBottomOf="@+id/record_setting_link_title_et"
        app:layout_constraintEnd_toStartOf="@+id/record_setting_link_title_et"
        app:layout_constraintStart_toStartOf="@+id/record_setting_link_et_view"
        app:layout_constraintTop_toTopOf="@+id/record_setting_link_title_et" />

    <EditText
        android:id="@+id/record_setting_link_title_et"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_underline_grey"
        android:hint="@string/msg_add_link_hint"
        android:inputType="text"
        android:maxLines="1"
        android:textAppearance="@style/ta_r_12_kr"
        android:textColor="@color/primary"
        android:textColorHint="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="@+id/record_setting_link_et_view"
        app:layout_constraintStart_toEndOf="@+id/record_setting_link_iv"
        app:layout_constraintTop_toTopOf="@+id/record_setting_link_et_view" />

    <EditText
        android:id="@+id/record_setting_link_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="4dp"
        android:background="@color/transparent"
        android:gravity="start"
        android:hint="@string/msg_input_link"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="4dp"
        android:textAppearance="@style/ta_r_12_kr"
        android:textColor="@color/primary"
        android:textColorHint="@color/grey_dark"
        app:layout_constraintBottom_toBottomOf="@+id/record_setting_link_et_view"
        app:layout_constraintEnd_toEndOf="@+id/record_setting_link_title_et"
        app:layout_constraintStart_toStartOf="@+id/record_setting_link_title_et"
        app:layout_constraintTop_toBottomOf="@+id/record_setting_link_title_et" />

</androidx.constraintlayout.widget.ConstraintLayout>